{
  "name": "@aniwatch/tv",
  "version": "0.0.1",
  "private": true,
  "engines": {
    "node": "16"
  },
  "packageManager": "yarn",
  "scripts": {
    "android:staging": "react-native run-android --variant=stagingdebug --appId=com.aniwatchtv.stg",
    "android:staging-release": "react-native run-android --variant=stagingrelease",
    "android:dev": "react-native run-android --variant=developmentdebug --appId=com.aniwatchtv.dev",
    "android:dev-release": "react-native run-android --variant=developmentrelease",
    "android:prod": "react-native run-android --variant=productiondebug --appId=com.aniwatchtv",
    "android:prod-release": "react-native run-android --variant=productionrelease",
    "ios": "react-native run-ios --simulator=\"iPhone 14\"",
    "ios:tv": "react-native run-ios --simulator=\"Apple TV\" --scheme=\"AniWatchTV-tvOS\"",
    "pod": "npx pod-install ios",
    "start": "react-native start",
    "start:clear": "cd android && ./gradlew clean && cd .. && react-native start --reset-cache",
    "test": "jest",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "app:release": "cd android && ./gradlew bundleRelease",
    "apk:beta:release": "cd android && fastlane beta && open app/build/outputs/apk/production/release",
    "apk:release": "cd android && ./gradlew assembleRelease && open app/build/outputs/apk/production/release"
  },
  "dependencies": {
    "@react-native-async-storage/async-storage": "^1.17.11",
    "@react-native-firebase/analytics": "^16.4.3",
    "@react-native-firebase/app": "^16.4.3",
    "@react-native-firebase/auth": "^16.4.3",
    "@react-native-firebase/crashlytics": "^16.4.3",
    "@react-native-google-signin/google-signin": "^8.2.1",
    "@react-navigation/native": "^6.0.13",
    "@react-navigation/native-stack": "^6.9.1",
    "@reduxjs/toolkit": "^1.9.0",
    "@tanstack/react-query": "^4.15.1",
    "axios": "^1.1.3",
    "date-fns": "^2.29.3",
    "i18next": "^22.0.5",
    "react": "18.0.0",
    "react-hook-form": "^7.39.3",
    "react-i18next": "^12.0.0",
    "react-native": "npm:react-native-tvos@0.69.6-0",
    "react-native-config": "^1.4.11",
    "react-native-dotenv": "^3.4.2",
    "react-native-fast-image": "^8.6.3",
    "react-native-keychain": "^8.1.1",
    "react-native-linear-gradient": "^2.6.2",
    "react-native-localize": "^2.2.4",
    "react-native-media-console": "^2.0.1",
    "react-native-paper": "5.0.0-rc.9",
    "react-native-qrcode-svg": "^6.1.2",
    "react-native-safe-area-context": "^4.4.1",
    "react-native-screens": "^3.18.2",
    "react-native-shadow-2": "^7.0.6",
    "react-native-svg": "^13.5.0",
    "react-native-vector-icons": "^9.2.0",
    "react-native-video": "^5.2.1",
    "react-native-webview": "^11.23.1",
    "react-native-youtube-iframe": "^2.2.2",
    "react-redux": "^8.0.5"
  },
  "devDependencies": {
    "@babel/core": "^7.12.9",
    "@babel/runtime": "^7.12.5",
    "@react-native-community/eslint-config": "^2.0.0",
    "@tsconfig/react-native": "^2.0.2",
    "@types/jest": "^26.0.23",
    "@types/react-native": "^0.69.0",
    "@types/react-native-vector-icons": "^6.4.12",
    "@types/react-native-video": "^5.0.14",
    "@types/react-test-renderer": "^18.0.0",
    "@typescript-eslint/eslint-plugin": "^5.29.0",
    "@typescript-eslint/parser": "^5.29.0",
    "babel-jest": "^26.6.3",
    "babel-plugin-module-resolver": "^4.1.0",
    "eslint": "^7.32.0",
    "jest": "^26.6.3",
    "metro-react-native-babel-preset": "^0.70.3",
    "react-test-renderer": "18.0.0",
    "typescript": "^4.4.4"
  },
  "resolutions": {
    "@types/react": "^18"
  },
  "jest": {
    "preset": "react-native",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  }
}
